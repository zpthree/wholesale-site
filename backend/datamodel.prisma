enum Permission {
  EMPLOYEE
  CUSTOMER
  ADMIN
}

type User {
  id: ID! @unique
  firstName: String!
  lastName: String
  company: String
  email: String @unique
  address: String
  phone: String
  username: String! @unique
  password: String!
  permissions: Permission!
  canOrder: Boolean!
  active: Boolean!
  resetToken: String
  resetTokenExpiry: Float
  cart: [CartItem!]!
}

type Item {
  id: ID! @unique
  department: String!
  barcode: String
  brand: String
  title: String
  location: String
  casesAvailable: Int!
  buyingLimit: Int
  casesPerSkid: Int
  casesPerRow: Int
  unitsPerCase: Float
  size: Float
  uom: String
  price: Int!
  discountPrice: Int
  discountQty: Int
  createdAt: DateTime!
  updatedAt: DateTime!
  expDate: String
  comments: String
  image: String
  largeImage: String
  status: String!
}

type CartItem {
  id: ID! @unique
  quantity: Int! @default(value: 1)
  item: Item!
  user: User!
}
